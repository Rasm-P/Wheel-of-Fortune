<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rules"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/game_rule1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/game_rule1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/game_rule2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/game_rule2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule2"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/game_rule3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/game_rule3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule3"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/game_rule4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/game_rule4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule4"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/game_rule5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule5"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_rule4"/>

    <TextView
        android:id="@+id/game_rule6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule6"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_rule5"/>

    <TextView
        android:id="@+id/game_rule7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule7"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_rule6"/>

    <TextView
        android:id="@+id/back_to_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game_rule7"/>

</androidx.constraintlayout.widget.ConstraintLayout>